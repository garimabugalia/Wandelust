<% layout("Layouts/boilerplate") %>

  <body>


    <!-- ‚úÖ Page Content -->
    <div class="container my-5">
      <div class="row">
        <!-- Left Side: Big Image -->
        <div class="col-md-5">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="img-fluid rounded shadow"
            style="height: 400px; width: 100%; object-fit: cover;">
        </div>

        <!-- Right Side: Details -->
        <div class="col-md-7 d-flex flex-column justify-content-between">
          <div>
            <h2 class="mb-3">
              <%= listing.title %>
            </h2>
          
          
            <p class="text-muted">Owned by
              <i><%= listing.owner ? listing.owner.username : "Unknown" %>
</i>
               <br/></p>
              <p class="text-muted"></p><%= listing.description %></p>
            </p>
            <h4 class="text-success mb-3">&#8377; <%= listing.price %>
            </h4>
            <p class="text-muted"><b>Location:</b>
              <%= listing.location %>
            </p>
            <p><b>Country:</b>
              <%= listing.country %>
            </p>
          </div>

          <!-- Buttons in single line -->
        <% if(curruser && listing.owner&& curruser._id.equals(listing.owner._id)){ %>
          <div class="mt-4 d-flex gap-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary px-4">
              ‚úèÔ∏è Edit
            </a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button type="submit" class="btn btn-danger px-4">
                üóëÔ∏è Delete
              </button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="col-md-5 offset-3">
      <hr />
      <% if(curruser) { %>
      <h4>Leave a review</h4>
      <form  action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate >
      
        <div  class="mb-3 mt-4">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
        
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
     </div>
        <div class="mb-3 mt-4">
          <label for="comments" class="form-label"> Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter a comment.</div>
        </div>
        <div class="mb-3 mt-4"><button class="btn btn-outline-dark">Submit</button></div>
      </form>
      <hr/>
      <% } %>
     
      <!-- üåç Map Section -->
            <div class="container my-4">
  <div id="map" style="height: 400px; width: 100%; border-radius: 10px;"></div>
</div>


<!-- Reviews Section -->
      <p><b>All Reviews</b></p>
      <div  class="row">
       <% for(rev of listing.review) { %>
         <div class="card  col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title"> <%= rev.author.username %></h5>
              <p class="starability-result card-text" data-rating="<%= rev.rating %>">
            </p>
            <p class="card-text"> <%= rev.comment %></p>
            
          </div>
          <form  class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= rev._id %>?_method=DELETE">
            <button class="btn btn-small btn-dark">Delete</button>
          </form>
         </div>
        <% } %>
      </div>


      
   
<!-- üó∫Ô∏è MapTiler SDK -->
  <link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
/>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
  // üëá Make sure these variables come from your controller
  const lat = <%- JSON.stringify(lat) %>;
  const lng = <%- JSON.stringify(lng) %>;

  console.log("üó∫Ô∏è Rendering map at:", lat, lng);

  if (lat && lng) {
    const map = L.map("map").setView([lat, lng], 13);

    L.tileLayer(
      "https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=aYLMduyIFseC4haIoSTI",
      {
        maxZoom: 18,
        attribution:
          '&copy; <a href="https://www.maptiler.com/">MapTiler</a> contributors',
      }
    ).addTo(map);

    const marker = L.marker([lat, lng]).addTo(map);
    marker.bindPopup("<b><%= listing.title %></b><br><%= listing.location %>").openPopup();
  } else {
    console.error("‚ö†Ô∏è No valid coordinates to display");
    document.getElementById("map").innerHTML =
      "<p style='color:red;text-align:center;'>Location not found</p>";
  }
</script>  
  </body>