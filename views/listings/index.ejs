<% layout("Layouts/boilerplate") %>

<body>

  <style>
    #filters {
      margin-top: 1rem;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: center;
      overflow: hidden;
    }

    .filter {
      padding: 0.5rem 1rem;
      margin-top: 1.5rem;
      align-items: center;
      gap: 0.5rem;
      opacity: 0.7;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
      min-width: 5rem;
      transition: all 0.3s ease;
    }

    .filter:hover {
      cursor: pointer;
      opacity: 1;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      transform: translateY(-2px);
    }

    .filter p {
      font-size: 0.8rem;
      margin: 0;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      margin-left: auto;
      border: 1px solid #ccc;
      border-radius: 1rem;
      padding: 1rem;
      height: 2.75rem;
      display: flex;
      margin-left: 3rem;
      align-items: center;
      white-space: nowrap;
    }

    /* ✅ Airbnb-like horizontal scroll behavior */
    @media (max-width: 768px) {
      #filters {
        flex-wrap: nowrap;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        padding-bottom: 0.5rem;
        -webkit-overflow-scrolling: touch;
      }

      #filters::-webkit-scrollbar {
        display: none; /* Hide scrollbar for clean look */
      }

      .filter {
        flex: 0 0 auto;
        scroll-snap-align: start;
        border: 1px solid #f1f1f1;
        border-radius: 1rem;
        background: #fff;
      }

      /* ✅ Move the tax toggle below filters */
      .tax-toggle {
        order: 99; /* pushes it to bottom */
        margin: 1rem auto 0 auto;
        width: fit-content;
        border: 1px solid #ccc;
      }
    }
    /* ✅ Large screens: keep tax toggle inline with filters */
@media (min-width: 769px) {
  #filters {
    flex-wrap: wrap; /* ensures filters + toggle are in same line */
    align-items: center;
  }

  .tax-toggle {
    margin-left: auto;
    margin-top: 1.5rem;
  }
}

  </style>

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-users"></i></div>
      <p>Guests</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>

    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <!-- ✅ stays same on desktop, moves below filters on mobile -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <div class="listings-container mt-3">
    <% for(let listing of listings) { %>
      <div class="card" style="width: 18rem;">
        <a href="/listings/<%= listing.id %>">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
          <div class="card-img-overlay">
            <h5 class="card-title text-white bg-dark bg-opacity-50 p-1 rounded">
              <i class="fa-solid fa-location-dot"></i> <%= listing.location %>
            </h5>
          </div>
        </a>
        <div class="card-body">
          <p class="card-text">
            <%= listing.title %><br>
            <b>&#8377;</b> <%= listing.price %>/night
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    let taxswitch = document.getElementById('switchCheckDefault');
    taxswitch.addEventListener('click', () => {
      let taxinfo = document.getElementsByClassName('tax-info');
      for (info of taxinfo) {
        if (info.style.display != 'inline') {
          info.style.display = 'inline';
        } else {
          info.style.display = 'none';
        }
      }
    });
  </script>
</body>
